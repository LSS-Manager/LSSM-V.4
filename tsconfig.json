{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "es5", "esnext", "scripthost"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "typings/dist",
        "paths": {
            "@stores/*": ["../src/stores/*"],
            "typings/*": ["../typings/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
        "types": ["jquery", "node", "vue", "webpack-env"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "typings/**/*"]
}