{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost",
			"es6"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2017",
		"types": [
			"node"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts"
	]
}